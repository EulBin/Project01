<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>TestAdmin</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>login.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <context-param>
		<param-name>INIT_PARAM</param-name>
		<param-value>web.xml에 저장한 초기화 매개변수</param-value>
	</context-param> 
	
	<context-param>
		<param-name>OracleDriver</param-name>
		<param-value>org.mariadb.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>OracleURL</param-name>
		<param-value>jdbc:mariadb://localhost:3306:kosmo_db</param-value>
	</context-param>
	<context-param>
		<param-name>OracleId</param-name>
		<param-value>kosmo_user</param-value>
	</context-param>
	<context-param>
		<param-name>OraclePwd</param-name>
		<param-value>1234</param-value>
	</context-param>
	
  <filter>
	  <filter-name>SetCharEncoding</filter-name>
	  <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
	    <init-param>
	      <param-name>encoding</param-name>
	      <param-value>utf-8</param-value>
	    </init-param>
	</filter>
	<filter-mapping>
	  <filter-name>SetCharEncoding</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>adminRegister</servlet-name>
		<servlet-class>adminmember.RegisterController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminRegister</servlet-name>
		<url-pattern>/admin/register.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>adminLogin</servlet-name>
		<servlet-class>adminmember.loginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminLogin</servlet-name>
		<url-pattern>/admin/login.do</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<param-name>maxPostSize</param-name>
		<param-value>1024000</param-value>
	</context-param>	
</web-app>